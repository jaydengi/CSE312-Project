<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('head'); %>
</head>
<body class="container">

<header>
  <%- include('header'); %>
</header>
<main>
  <div class="jumbotron">
    <h1>Auctions</h1>
    <a class="nav-link" href="/add-auction">List auction</a>

    <div id="auctions-div">
        <% auction.forEach(function(auction) { %>
          <div>
              <img src="<%=auction.img%>" height="250">
              <div>
                  <h5><%= auction.name %></h5>
                  <p><%= auction.initialbid %></p>
                  <p><%= auction.description %></p><br>
              </div>
          </div>
          <% }) %>
      </div>
      
  </div>
</main>
<footer>
    <%- include('footer'); %>
</footer>
</body>
</html>